# .bashrc

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Source global definitions
[ -f /etc/bashrc ] && . /etc/bashrc

export PATH=/root/bin:$PATH

# Some alias
alias cd..="cd .."
alias ping="ping -c2"
alias showmount="showmount -a"
alias vi=vim
alias more=less
alias df="df -h"
alias du="du -h"
alias lf="ls -lahF --color=auto"
alias ls='ls --color=auto'

PS1='\u@\h:\W\$ '

# set MAKEFLAGS
export MAKEFLAGS=" -j6"
