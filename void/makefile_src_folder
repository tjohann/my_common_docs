# makefile
main = none

MODULES = lisp_repos avr_repos can_repos rtems raspi real_time_linux_stuff books arduino_repos virtualization_repos external_repos

.PHONY: all
all:
	@echo "+-------------------------------------------------+"
	@echo "|                                                 |"
	@echo "|              Nothing to do ...                  |"
	@echo "|                                                 |"
	@echo "+-------------------------------------------------+"

install: all


.PHONY: clean
clean:
	rm -f *~ *.o .*~

distclean: clean
	for dir in $(MODULES); do (cd $$dir && $(MAKE) $@); done

#
# update all cloned repos
#
update_all: gtk OpenWave-2KE buildroot Cello go-mode.el gopl.io libabc ldd3 libconfuse linux openocd-code optee_client optee_os cs631apue vivado-boards garminexport tutorial-jsonc dmc2 capella
	for dir in $(MODULES); do (echo $$dir && cd $$dir && make update_all); done


#
# update
#
.PHONY: capella
capella:
	@echo "+------------------------------------------------------------------------+"
	@echo "|              update capella"
	@echo "+------------------------------------------------------------------------+"
	(cd capella && git pull)
	@echo "+------------------------------------------------------------------------+"
	@echo "|                done capella"
	@echo "+------------------------------------------------------------------------+"

